{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-one-third is-offset-one-third">
                <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>

        <div class="field">
            <div class="control">
                <label for="inputEmail">Email</label>
            </div>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input" required autofocus>
        </div>

        <div class="field">
            <div class="control">
                <label for="inputPassword">Mot de passe</label>
            </div>
            <input type="password" name="password" id="inputPassword" class="input" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="field">
            <div class="control">
                <button class="button is-link" type="submit">
                    Se connecter
                </button>
            </div>
        </div>

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}


    </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
