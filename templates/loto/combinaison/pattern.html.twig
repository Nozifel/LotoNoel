<div id="combinaison-{{ combinaison.id }}" class="combinaison-{{ combinaison.type }}">


 {% if combinaison.type == 'combinaison' %}

    {% for i in 0..loto.hauteurGrille-1 %}
        <div>
            <div class="bloc-pattern is-flex">
                {% for j in 0..loto.largeurGrille-1 %}
                    <div class="pattern-case {{ combinaison.pattern[i][j] is defined ? 'has-background-danger' : '' }}"></div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}

{% elseif combinaison.type ==  'colonne' %}

     <div class="description-combinaison">1 Colonne</div>

 {% elseif combinaison.type ==  'ligne' %}

     <div class="description-combinaison">1 Ligne</div>

 {% elseif combinaison.type ==  'numero' %}

     <div class="description-combinaison">{{ combinaison.numero }} numéro(s)</div>

{% elseif combinaison.type ==  'ordre' %}

    <div class="description-combinaison">Le {{ suffix(combinaison.numero) }} numéro</div>

{% endif %}

    {% if combinaison.gagnant %}
        <button class="button is-link is-small mt-3 is-fullwidth">
            {{ combinaison.gagnant.prenom }} {{ combinaison.gagnant.nom }}
        </button>
    {% else %}
    <button class="button is-danger is-light is-small mt-3 delete-combinaison show-modal is-fullwidth" data-combinaison-id="{{ combinaison.id }}" data-target=".modal-delete-combinaison-{{ loto.id }}">
        <span class="mdi mdi-trash-can-outline"></span>
    </button>
    {% endif %}
</div>